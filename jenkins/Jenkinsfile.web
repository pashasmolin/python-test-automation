pipeline {
    agent any

    environment {
        VENV = 'venv'
        ALLURE_RESULTS = 'reports/allure-results'
        ALLURE_REPORT = 'reports/allure-report'
        ALLURE_DIR = 'allure/allure-2.27.0'
    }

    stages {
        stage('Setup') {
            steps {
                sh '''
                python3 -m venv ${VENV}
                source ${VENV}/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt

                # Download and unzip Allure CLI
                curl -sSL -o allure.zip https://github.com/allure-framework/allure2/releases/download/2.27.0/allure-2.27.0.zip
                unzip -o allure.zip -d allure
                '''
            }
        }

        stage('Run Web Tests') {
            steps {
                sh '''
                source ${VENV}/bin/activate
                pytest tests/web --alluredir=${ALLURE_RESULTS}
                '''
            }
        }

        stage('Generate Allure Report') {
            steps {
                sh '''
                source ${VENV}/bin/activate && \
                export PATH=$PWD/${ALLURE_DIR}/bin:$PATH && \
                which allure && \
                allure generate ${ALLURE_RESULTS} --clean -o ${ALLURE_REPORT}
                '''
            }
        }

        stage('Publish Allure Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    results: [[path: "${ALLURE_RESULTS}"]]
                ])
            }
        }
    }
}
